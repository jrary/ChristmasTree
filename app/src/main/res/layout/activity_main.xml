<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shine your light~!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/main_tree_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tree 꾸미기"
        android:backgroundTint="@color/black"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/main_title_tv"
        app:layout_constraintBottom_toTopOf="@id/main_cookie_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/main_cookie_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fortune Cookie"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/main_tree_btn"
        app:layout_constraintBottom_toTopOf="@id/main_more_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/main_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="히히"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/main_cookie_btn"
        app:layout_constraintBottom_toBottomOf="@id/main_feedback_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/main_feedback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이건 무슨 버튼일까 궁금하지? 근데 꼭 마지막에 눌러야 함! 이 버튼 마지막에 눌러보자! 너무 누르고 싶다..."
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/main_more_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>