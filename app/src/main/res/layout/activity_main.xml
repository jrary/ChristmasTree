<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merry Christmas!"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_margin="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/main_tree_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tree 꾸미기"
        android:backgroundTint="@color/black"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/main_title_tv"
        app:layout_constraintBottom_toTopOf="@id/main_cookie_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/main_cookie_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fortune Cookie"
        android:backgroundTint="@color/black"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/main_tree_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/main_feedback_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오류 제보 &amp; Comments"
        android:textSize="13sp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>