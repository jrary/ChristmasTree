<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tree_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deco the tree!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/tree_main_iv"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:src="@drawable/tree"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tree_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/tree_star_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/star"
        app:layout_constraintTop_toBottomOf="@id/tree_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/tree_deco_light_iv"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:src="@drawable/deco1"
        app:layout_constraintTop_toTopOf="@id/tree_main_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/tree_deco2_iv"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:src="@drawable/deco2"
        app:layout_constraintTop_toTopOf="@id/tree_main_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/tree_deco4_iv"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:src="@drawable/deco4"
        app:layout_constraintTop_toTopOf="@id/tree_main_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/tree_deco5_iv"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:src="@drawable/deco5"
        app:layout_constraintTop_toTopOf="@id/tree_main_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>