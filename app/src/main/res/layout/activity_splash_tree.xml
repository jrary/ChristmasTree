<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        android:src="@drawable/tree"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/splash_tree_view"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:background="@drawable/radius_pink_bg"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/splash_tree1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="바쁜 스케쥴의 shine을 위해"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/splash_tree2_tv"
        app:layout_constraintStart_toStartOf="@id/splash_tree_view"
        app:layout_constraintEnd_toEndOf="@id/splash_tree_view"
        />
    <TextView
        android:id="@+id/splash_tree2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제작된 트리메이커!"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/splash_tree3_tv"
        app:layout_constraintStart_toStartOf="@id/splash_tree_view"
        app:layout_constraintEnd_toEndOf="@id/splash_tree_view"
        />
    <TextView
        android:id="@+id/splash_tree3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="트리를 예쁘게 꾸며주세요~"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/splash_tree_view"
        app:layout_constraintBottom_toBottomOf="@id/splash_tree_view"
        app:layout_constraintStart_toStartOf="@id/splash_tree_view"
        app:layout_constraintEnd_toEndOf="@id/splash_tree_view"
        />

    <TextView
        android:id="@+id/splash_tree_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START!"
        android:textColor="#ffccaa"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@id/splash_tree_view"
        app:layout_constraintStart_toStartOf="@id/splash_tree_view"
        app:layout_constraintEnd_toEndOf="@id/splash_tree_view"
        />
</androidx.constraintlayout.widget.ConstraintLayout>