<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/result_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/result_tree_iv"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_margin="20dp"
        android:src="@drawable/tree"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/result_bubble_iv"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:src="@drawable/bubble"
        app:layout_constraintBottom_toTopOf="@id/result_tree_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <TextView
        android:id="@+id/result_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="...짱"
        app:layout_constraintStart_toStartOf="@id/result_bubble_iv"
        app:layout_constraintEnd_toEndOf="@id/result_bubble_iv"
        app:layout_constraintTop_toTopOf="@id/result_bubble_iv"
        app:layout_constraintBottom_toBottomOf="@id/result_bubble_iv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완성도"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/result_comp_view"
        app:layout_constraintBottom_toTopOf="@id/result_comp_view"
        />
    <View
        android:id="@+id/result_comp_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/radius_black_line_bg"
        app:layout_constraintStart_toEndOf="@id/result_tree_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        />
    <TextView
        android:id="@+id/result_comp_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/result_comp_view"
        app:layout_constraintEnd_toEndOf="@id/result_comp_view"
        app:layout_constraintTop_toTopOf="@id/result_comp_view"
        app:layout_constraintBottom_toBottomOf="@id/result_comp_view"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="샤인의 만족도"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/result_sati_view"
        app:layout_constraintBottom_toTopOf="@id/result_sati_view"
        />
    <View
        android:id="@+id/result_sati_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/radius_black_line_bg"
        app:layout_constraintStart_toEndOf="@id/result_tree_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.55"
        />
    <TextView
        android:id="@+id/result_sati_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/result_sati_view"
        app:layout_constraintEnd_toEndOf="@id/result_sati_view"
        app:layout_constraintTop_toTopOf="@id/result_sati_view"
        app:layout_constraintBottom_toBottomOf="@id/result_sati_view"
        />

    <TextView
        android:id="@+id/result_final_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최종 점수: "
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/result_final_score_tv"
        app:layout_constraintTop_toBottomOf="@id/result_tree_iv"
        app:layout_constraintBottom_toTopOf="@id/result_retry_btn"
        />
    <TextView
        android:id="@+id/result_final_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="35sp"
        android:textColor="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/result_final_1_tv"
        app:layout_constraintHorizontal_bias="0.6"
        />
    <TextView
        android:id="@+id/result_final_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   점"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/result_final_score_tv"
        app:layout_constraintTop_toTopOf="@id/result_final_1_tv"
        app:layout_constraintBottom_toBottomOf="@id/result_final_1_tv"
        />
    <Button
        android:id="@+id/result_retry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:backgroundTint="@color/black"
        android:layout_margin="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/result_home_btn"
        app:layout_constraintTop_toBottomOf="@id/result_final_1_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/result_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:backgroundTint="@color/black"
        android:layout_margin="40dp"
        app:layout_constraintStart_toStartOf="@id/result_retry_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_final_1_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>